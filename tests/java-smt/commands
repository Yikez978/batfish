#this file assumes that we are running from top-level source directory

add-batfish-option haltonconverterror
add-batfish-option haltonparseerror
add-batfish-option verboseparse

# all tests with BGP only
test tests/java-smt/bgp1-init.ref init-testrig test_rigs/smt-examples/BGP1
test tests/java-smt/bgp1-forwarding.ref get smt-forwarding destination="42.42.42.0/32"
test tests/java-smt/bgp1-reachability.ref get smt-reachability node1Regex="R1" | ifaceRegex="Loopback.*"
test tests/java-smt/bgp1-bounded-len.ref get smt-bounded-length node1Regex="R1" | ifaceRegex="Loopback.*" | bound=1
test tests/java-smt/bgp1-bounded-len2.ref get smt-bounded-length node1Regex="R1" | ifaceRegex="Loopback.*" | bound=0
test tests/java-smt/bgp1-routing-loop.ref get smt-routing-loop
test tests/java-smt/bgp1-blackhole.ref get smt-blackhole
test tests/java-smt/bgp1-multipath.ref get smt-multipath-consistency node1Regex="R1" | ifaceRegex="Loopback.*"

# all tests with ospf only
