test tests/java-smt/ospf3-bounded-len2.ref get smt-bounded-length node1Regex="R3" | ifaceRegex="Loopback.*" | bound=1
test tests/java-smt/ospf3-equal-len.ref get smt-equal-length node1Regex="R3" | ifaceRegex="Loopback.*" | node2Regex="R(1|2)"
test tests/java-smt/ospf3-equal-len2.ref get smt-equal-length node1Regex="R3" | ifaceRegex="Loopback.*" | node2Regex="R(1|0)"
